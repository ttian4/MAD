<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.gsu.httpscs.finalproject.GameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/coin"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="1000"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="lv:1"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"


            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/game_activity_animation1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg1"
            ></ImageView>
        <ImageView
            android:id="@+id/game_activity_animation2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg1"
            ></ImageView>
    </FrameLayout>


    <ListView
        android:id="@+id/game_activity_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></ListView>
    </LinearLayout>

