<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.gsu.httpscs.finalproject.GameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:background="@mipmap/coin"
            android:layout_gravity="center"
            android:layout_marginRight="5dp">
            </ImageView>

        <TextView
            android:id="@+id/mainFrame_money"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="1000"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="lv:1"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"


            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/game_activity_bg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg1"></ImageView>
        <ImageView
            android:id="@+id/main_frame_monster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/monster"
            android:layout_alignBottom="@+id/imageView_main_frame"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/imageView_main_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="53dp"
            android:layout_marginStart="21dp"
            />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_game_tabLayout"
        android:layout_width="match_parent"
        app:tabBackground="@android:color/black"
        android:layout_height="60dp"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_game_viewPager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"></android.support.v4.view.ViewPager>

    </LinearLayout>

