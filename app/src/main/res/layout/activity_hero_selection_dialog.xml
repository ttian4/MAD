<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.gsu.httpscs.finalproject.dialog.HeroSelectionDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="choose your hero"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_bright"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_dark"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Bruce" />
        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            >
        </View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Selena" />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            >
        </View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Jayce" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light"
        >
    <RadioGroup
        android:id="@+id/hero_selection_radio_group"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/sunce_image"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@mipmap/cece"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.2"
            >
        </View>
        <RadioButton
            android:id="@+id/mayunlu_image"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@mipmap/lulu"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.2"
            >
        </View>
        <RadioButton
            android:id="@+id/xiahoudun_image"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@mipmap/dundun"
            />
    </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/hero_selection_ok"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ok"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"

        />
</LinearLayout>
