<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bggrident"
    tools:context="edu.gsu.httpscs.finalproject.StartActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/main_activity_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Hero's Journey"
        android:gravity="center"
        android:fontFamily="fantasy"
        android:textSize="60sp"
        android:textColor="@android:color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="right"
            android:textColor="@android:color/holo_blue_light"
            android:paddingTop="22dp"
            android:text="E-mail:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_et_email"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Please input your E-mail"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:paddingLeft="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:paddingTop="22dp"
            android:gravity="right"
            android:textColor="@android:color/holo_blue_light"
            android:text="password:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_et_password"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Please input your password"
            android:inputType="textWebPassword"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_sharedpreference_bt_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <Button
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        android:id="@+id/activity_sharedpreference_bt_clear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="clear"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    </LinearLayout>


</RelativeLayout>

